<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".UI.CrearCuenta">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textSize="19sp"
        android:textStyle="bold"
        android:translationX="-116dp" />

    <EditText
        android:id="@+id/etxtNombre"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/borde"
        android:hint="Nombre"
        android:padding="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apellido"
        android:textSize="19sp"
        android:textStyle="bold"
        android:translationX="-116dp" />

    <EditText
        android:id="@+id/etxtApellido"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/borde"
        android:hint="Apellido"
        android:padding="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Foto"
        android:textSize="19sp"
        android:textStyle="bold"
        android:translationX="-130dp" />

    <ImageView
        android:id="@+id/imgFoto"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:background="@drawable/borde"
        android:src="@drawable/search_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre de usuario"
        android:textSize="19sp"
        android:textStyle="bold"
        android:translationX="-70dp" />

    <EditText
        android:id="@+id/etxtUsuario"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/borde"
        android:hint="Nombre de usuario"
        android:padding="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contrasena"
        android:textSize="19sp"
        android:textStyle="bold"
        android:translationX="-100dp" />

    <EditText
        android:id="@+id/etxtContrasena"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/borde"
        android:hint="Contrasena"
        android:padding="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmar contrasena"
        android:textSize="19sp"
        android:textStyle="bold"
        android:translationX="-60dp" />

    <EditText
        android:id="@+id/etxtConfirmarContrasena"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/borde"
        android:hint="Confirmar contrasena"
        android:padding="10dp" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnCrearCuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="crear cuenta"
            android:textSize="17sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="cancelar"
            android:textSize="17sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>